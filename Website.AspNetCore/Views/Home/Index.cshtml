@using Website.CategorySupport

@inject ICategoryRepository CategoryRepository
@inject ICategoryUrlProvider CategoryUrlProvider

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>Categories:</p>

<ul>
    @foreach (var category in CategoryRepository.GetAll())
    {
        <li><a href="@CategoryUrlProvider.GetUrl(category)">@category.Name</a></li>
    }
</ul>